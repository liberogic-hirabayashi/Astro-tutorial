---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";
import Card from "../components/Card.astro";

import { Image } from "astro:assets";

const pageTitle = "Astro tutorial";
const cardItem = [
  { href: "/", title: "HOME", body: "Astro Blog" },
  { href: "/about/", title: "ABOUT", body: "プロフィール" },
  { href: "/blog/", title: "BLOG", body: "ブログページ" },
];
import img from "/public/cat.jpg";
---

<Layout title={pageTitle}>
    <main>
      <h1>Astro Blog</h1>
      <div class="wrap">
        <Link />
      </div>
      <div class="img">
        <Image src={img} alt="cat" width={300} height={300} />
      </div>
      <div class="cardWrap">
        {
          cardItem.map((item) => (
            <Card href={item.href} body={item.body} title={item.title} />
          ))
        }
      </div>
    </main>
</Layout>

<style lang="scss">
  .img {
    text-align: center;
    margin-top: 40px;

    img {
      object-fit: cover;
    }
  }
  .cardWrap {
    max-width: 880px;
    margin: 40px auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
  }
</style>
