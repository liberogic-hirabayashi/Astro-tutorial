---
import Layout from "../layouts/Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <main>
    <div class="md">
      <div>
        <h1>{frontmatter.title}</h1>
        <p>著者: {frontmatter.author}</p>
      </div>
      <div>
        <span>Date：{new Date(frontmatter.pubDate).toLocaleString()}</span>
        <div class="tag">
          {frontmatter.tags.map((item: any) => <span>{item}</span>)}
        </div>
      </div>
    </div>

    <slot />
  </main>
</Layout>

<style lang="scss">
  .md {
    padding: 0 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    h1 {
      font-size: 30px;
    }

    .tag {
      margin-top: 10px;
      span {
        display: inline;
        padding: 4px;
        background-color: #333;
        color: #fff;
        font-size: 12px;
      }
      span + span {
        margin-left: 20px;
      }
    }
  }
</style>
